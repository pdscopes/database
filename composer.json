{
    "name": "madesimple/database",
    "description": "Database entities and query builder",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Peter Scopes",
            "email": "peter.scopes@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.2",
        "ext-json": "*",
        "ext-pdo": "*",
        "psr/log": "~1.0",
        "madesimple/php-arrays": "^1.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^8",
        "mockery/mockery": "0.9.*",
        "fzaninotto/faker": "~1.7",
        "symfony/console": "~3.2",
        "symfony/filesystem": "~3.2",
        "symfony/finder": "^3.2",
        "vlucas/phpdotenv": "^2.4",
        "monolog/monolog": "^1.23"
    },
    "autoload": {
        "psr-4": {
            "MadeSimple\\Database\\": "src/"
        }
    },
    "suggest": {
        "fzaninotto/faker": "Generates fake data for you (~1.7).",
        "symfony/console": "Required for Symfony commands (~3.2)",
        "symfony/filesystem": "Required for Symfony commands (~3.2)",
        "symfony/finder": "Required for Symfony commands (^3.2)"
    },
    "autoload-dev": {
        "psr-4": {
            "MadeSimple\\Database\\Tests\\": "tests/",
            "MadeSimple\\Database\\Example\\": "examples/"
        }
    },
    "bin": [
        "bin/database"
    ]
}
